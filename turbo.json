{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["bun.lock"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig.*.json"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "outputLogs": "full"
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputLogs": "full"
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputLogs": "full"
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "test/**", "tests/**", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "vitest.config.*", "jest.config.*"],
      "outputs": ["coverage/**"],
      "outputLogs": "full"
    }
  }
}
