# ===========================================
# Genfeed Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===================
# API Configuration
# ===================

PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/genfeed

# Storage Adapter: "mongodb" or "sqlite"
STORAGE_ADAPTER=sqlite
SQLITE_PATH=./data/genfeed.db
STORAGE_DEBUG=false

# Redis (for BullMQ job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Replicate API (required for AI features)
REPLICATE_API_TOKEN=r8_your_token_here

# Webhook Base URL (for async job callbacks)
WEBHOOK_BASE_URL=http://localhost:3001

# Worker Type: "all", "workflow", "image", "video", "llm", "processing"
WORKER_TYPE=all

# ===================
# Web Configuration
# ===================

NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_URL=http://localhost:3000
